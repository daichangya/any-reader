{
  "version": 2,
  "buildCommand": "pnpm install && pnpm build:web && pnpm server:build",
  "outputDirectory": "packages/web/dist",  // 前端构建产物目录
  "installCommand": "python3 -m ensurepip && pip3 install --upgrade setuptools && pnpm install",
  "framework": "other",  // 非预设框架，手动指定入口
  "regions": ["iad1"],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "VITE_APP_ENV": "production"
  },
  "build": {
    "env": {
      "VITE_APP_PLATFORM": "browser"  // 确保构建为网页端
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",  // 后端 API 路由
      "dest": "packages/server/dist/index.mjs"  // 后端服务入口
    },
    {
      "src": "/(.*)",  // 前端静态资源路由
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=60, s-maxage=60"
      }
    }
  ]
}
