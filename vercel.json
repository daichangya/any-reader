{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/server/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/packages/server/public/$1"
    }
  ],
  "buildCommand": "pnpm --filter=@any-reader/web build:b",
  "outputDirectory": "packages/server/public"
}
